<mvc:View
    controllerName="sap_taskui.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <App>
        <Page title="Task UI">
            <content>
                <VBox>
                    <Label text="First Name"/>
                    <Input value="{/firstName}" id="firstName"/>
                    <Label text="Last Name"/>
                    <Input value="{/lastName}" id="lastName"/>
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>